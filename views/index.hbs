    <body>
    
        <!-- Section-->
        {{> Nav}}
        {{> Banner}}
        <section class="py-5">
            <div class="container px-4 px-lg-5 mt-5">
                <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
                    {{#each product}}
                    <div class="col mb-5">
                        <div class="card h-100">
                            <!-- Product image-->
                            <img style="height:250px;" class="card-img-top" src="/images/products/{{_id}}"  alt="..." />
                            <!-- Product details-->
                            <div class="card-body p-4">
                                <div class="text-center">
                                    <!-- Product name-->
                                    <h5 style="color: red;text-transform:uppercase" class="fw-bolder">{{email}}</h5> <br>
                                   <h6><p><i>{{descri}}</i></p></h6> 
                                    <!-- Product price-->
                                    <p style="color: red;"><i><span style="color: red;">&#8377;</span>: {{price}}..</i></p>
                                </div>
                            </div>
                            <!-- Product actions-->
                            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                <div class="text-center"><a class="btn btn-outline-dark mt-auto" href="/add-to-cart/{{id}}">ADD TO CART</a></div>
                               <div class="text-center"><a style="margin-top: 8%;" class="btn btn-success mt-2px" href="/buynow/{{id}}">BUY NOW</a></div>

                            </div>
                        </div>
                    </div>
                    {{/each}}
                     </div>
                 </div>
        </section>

